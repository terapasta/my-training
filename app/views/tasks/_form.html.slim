.form
  = form_with model: task, local: true, :builder => CustomFormBuilder do |f|
    .field
      = f.label :name, class: "label"
      = f.text_field :name, class: "input"
    .field
      = f.label :description, class: "label"
      = f.text_area :description, class: "textarea"
    .field
      = f.label :deadline, class: "label"
      = f.date_field :deadline, class: ""
    .field
      = f.label :status, class: "label"
      .select
        = f.select :status, Task.statuses.keys.map {|k| [t("enums.task.status.#{k}"), k]}
    .field
      = f.label :priority, class: "label"
      .select
        = f.select :priority, Task.priorities.keys.map {|k| [t("enums.task.priority.#{k}"), k]}
    .field
      = render partial: 'shared/forms/submit', locals: { form: f, name: btn_name }
