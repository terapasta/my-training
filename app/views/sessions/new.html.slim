.form
  = form_with scope: :session, url: login_path, local: true do |f|
    .field
      = f.label :email, t('activerecord.attributes.user.email'), class: "label"
      = f.email_field :email, class: "input"
    .field
      = f.label :password, t('activerecord.attributes.user.password'), class: "label"
      = f.password_field :password, class: "input"
    .field
      = f.label :remember_me, class: "checkbox"
        = f.check_box :remember_me
        span = t('forms.checkbox.remember_me')
    .field
      = render partial: 'shared/forms/submit', locals: { form: f, name: t('buttons.login') }
